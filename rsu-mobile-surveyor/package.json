{
  "name": "rsu-mobile-surveyor",
  "version": "1.0.0",
  "description": "RSU Gabon - Application Mobile Enquêteurs Terrain",
  "main": "node_modules/expo/AppEntry.js",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "eject": "expo eject",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/ --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint src/ --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json}\"",
    "build:android": "eas build --platform android",
    "build:ios": "eas build --platform ios",
    "build:all": "eas build --platform all",
    "submit:android": "eas submit --platform android",
    "submit:ios": "eas submit --platform ios",
    "update": "eas update",
    "preview": "expo install --fix && expo start --tunnel",
    "clean": "expo r -c",
    "analyze": "npx @expo/bundle-analyzer",
    "security-audit": "npm audit && npm audit fix"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "1.18.2",
    "@react-native-community/netinfo": "9.3.10",
    "@react-navigation/bottom-tabs": "^6.5.11",
    "@react-navigation/native": "^6.1.9",
    "@react-navigation/stack": "^6.3.20",
    "@sentry/react-native": "^5.36.0",
    "axios": "^1.6.2",
    "date-fns": "^2.30.0",
    "expo": "^54.0.13",
    "expo-application": "~5.3.0",
    "expo-camera": "~13.4.4",
    "expo-constants": "~14.4.2",
    "expo-device": "~5.4.0",
    "expo-file-system": "~15.4.5",
    "expo-font": "~11.4.0",
    "expo-image-picker": "~14.3.2",
    "expo-linking": "~5.0.2",
    "expo-location": "~16.1.0",
    "expo-notifications": "^0.32.12",
    "expo-secure-store": "~12.3.1",
    "expo-splash-screen": "^31.0.10",
    "expo-status-bar": "~1.6.0",
    "expo-system-ui": "~2.4.0",
    "expo-updates": "~0.18.19",
    "formik": "^2.4.5",
    "lodash": "^4.17.21",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-native": "^0.72.17",
    "react-native-date-picker": "^4.3.6",
    "react-native-elements": "^3.4.3",
    "react-native-gesture-handler": "~2.12.0",
    "react-native-maps": "1.7.1",
    "react-native-paper": "^5.11.6",
    "react-native-reanimated": "~3.3.0",
    "react-native-safe-area-context": "4.6.3",
    "react-native-screens": "~3.22.0",
    "react-native-signature-canvas": "^4.7.2",
    "react-native-svg": "13.9.0",
    "react-native-vector-icons": "^10.0.3",
    "react-native-web": "~0.19.6",
    "react-query": "^3.39.3",
    "uuid": "^9.0.1",
    "yup": "^1.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.6",
    "@babel/preset-env": "^7.23.6",
    "@babel/runtime": "^7.23.6",
    "@expo/config-plugins": "~7.2.5",
    "@expo/metro-config": "~0.10.7",
    "@expo/webpack-config": "^18.0.0",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^12.4.2",
    "@types/jest": "^29.5.8",
    "@types/lodash": "^4.14.202",
    "@types/react": "~18.2.45",
    "@types/react-native": "~0.72.8",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.55.0",
    "eslint-config-expo": "^7.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-native": "^4.1.0",
    "jest": "^29.7.0",
    "jest-expo": "~49.0.0",
    "metro": "^0.80.3",
    "prettier": "^3.1.0",
    "react-test-renderer": "18.2.0",
    "typescript": "^5.3.3"
  },
  "resolutions": {
    "react-native-vector-icons": "^10.0.3",
    "@react-native-community/netinfo": "11.1.0"
  },
  "jest": {
    "preset": "jest-expo",
    "transformIgnorePatterns": [
      "node_modules/(?!((jest-)?react-native|@react-native(-community)?)|expo(nent)?|@expo(nent)?/.*|@expo-google-fonts/.*|react-navigation|@react-navigation/.*|@sentry/react-native|native-base|react-native-svg)"
    ],
    "setupFilesAfterEnv": [
      "@testing-library/jest-native/extend-expect"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.test.{js,jsx,ts,tsx}",
      "!src/**/index.{js,jsx,ts,tsx}"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  },
  "eslintConfig": {
    "extends": [
      "expo",
      "prettier"
    ],
    "plugins": [
      "prettier",
      "react-hooks",
      "react-native"
    ],
    "rules": {
      "prettier/prettier": "error",
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn",
      "react-native/no-unused-styles": "error",
      "react-native/split-platform-components": "error",
      "react-native/no-inline-styles": "warn",
      "react-native/no-color-literals": "warn",
      "no-console": [
        "warn",
        {
          "allow": [
            "warn",
            "error"
          ]
        }
      ],
      "@typescript-eslint/no-unused-vars": "error",
      "react/prop-types": "off"
    },
    "env": {
      "react-native/react-native": true
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "arrowParens": "avoid",
    "endOfLine": "lf"
  },
  "expo": {
    "name": "RSU Gabon Enquêteur",
    "slug": "rsu-gabon-surveyor",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#2E7D32"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "ga.gouv.rsu.surveyor",
      "buildNumber": "1.0.0",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Cette application a besoin d'accéder à votre position pour la géolocalisation des enquêtes terrain RSU.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Cette application a besoin d'accéder à votre position pour la géolocalisation des enquêtes terrain RSU.",
        "NSCameraUsageDescription": "Cette application a besoin d'accéder à l'appareil photo pour capturer des documents d'identité.",
        "NSPhotoLibraryUsageDescription": "Cette application a besoin d'accéder à la galerie photo pour sélectionner des images.",
        "NSMicrophoneUsageDescription": "Cette application peut avoir besoin d'accéder au microphone pour les enquêtes audio."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#2E7D32"
      },
      "package": "ga.gouv.rsu.surveyor",
      "versionCode": 1,
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "CAMERA",
        "RECORD_AUDIO",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "ACCESS_NETWORK_STATE",
        "INTERNET",
        "WAKE_LOCK",
        "VIBRATE"
      ],
      "blockedPermissions": [
        "CALL_PHONE",
        "READ_SMS",
        "SEND_SMS"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-location",
      "expo-camera",
      "expo-image-picker",
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#2E7D32",
          "sounds": [
            "./assets/sounds/sync-complete.wav",
            "./assets/sounds/error-alert.wav"
          ]
        }
      ],
      [
        "@sentry/react-native/expo",
        {
          "organization": "rsu-gabon",
          "project": "mobile-surveyor"
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "compileSdkVersion": 34,
            "targetSdkVersion": 34,
            "buildToolsVersion": "34.0.0",
            "proguardMinifyEnabled": true,
            "enableProguardInReleaseBuilds": true,
            "enableHermes": true
          },
          "ios": {
            "deploymentTarget": "13.0",
            "flipper": false
          }
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "rsu-gabon-mobile-surveyor"
      },
      "apiUrl": {
        "development": "http://localhost:8000/api/v1",
        "staging": "https://rsu-staging.gouv.ga/api/v1",
        "production": "https://rsu-api.gouv.ga/api/v1"
      },
      "sentryDsn": "YOUR_SENTRY_DSN_HERE",
      "buildVersion": "1.0.0",
      "buildDate": "2025-01-13"
    },
    "owner": "rsu-gabon",
    "updates": {
      "fallbackToCacheTimeout": 0,
      "url": "https://u.expo.dev/rsu-gabon-mobile-surveyor"
    },
    "runtimeVersion": {
      "policy": "sdkVersion"
    }
  },
  "eas": {
    "build": {
      "development": {
        "developmentClient": true,
        "distribution": "internal",
        "android": {
          "buildType": "apk"
        }
      },
      "staging": {
        "distribution": "internal",
        "android": {
          "buildType": "apk"
        },
        "env": {
          "NODE_ENV": "staging"
        }
      },
      "production": {
        "android": {
          "buildType": "aab"
        },
        "env": {
          "NODE_ENV": "production"
        }
      }
    },
    "submit": {
      "production": {
        "android": {
          "serviceAccountKeyPath": "./google-service-account.json",
          "track": "internal"
        },
        "ios": {
          "appleId": "rsu.admin@gouv.ga",
          "ascAppId": "RSU_GABON_ASC_APP_ID",
          "appleTeamId": "RSU_GABON_TEAM_ID"
        }
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rsu-gabon/mobile-surveyor.git"
  },
  "keywords": [
    "RSU",
    "Gabon",
    "React Native",
    "Mobile",
    "Surveyor",
    "Social Registry",
    "Government",
    "Expo"
  ],
  "author": {
    "name": "Ministère de l'Économie - République Gabonaise",
    "email": "rsu.admin@gouv.ga",
    "url": "https://economie.gouv.ga"
  },
  "license": "PROPRIETARY",
  "bugs": {
    "url": "https://github.com/rsu-gabon/mobile-surveyor/issues"
  },
  "homepage": "https://rsu.gouv.ga",
  "funding": {
    "type": "government",
    "url": "https://worldbank.org/en/country/gabon/projects"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
